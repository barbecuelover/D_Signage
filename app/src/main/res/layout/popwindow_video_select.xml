<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commentBackground">

    <RelativeLayout
        android:id="@+id/rl_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#44333333"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Choose hyper type"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/rl_title_layout"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_select_video"
            style="@style/button_white_in_pop_window"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:text="Local Res" />

        <Button
            android:id="@+id/btn_video_url"
            style="@style/button_white_in_pop_window"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Net Url" />
    </LinearLayout>





</RelativeLayout>