<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commentBackground"
    app:cardCornerRadius="24dp">

        <ImageView
            android:id="@+id/ic_hyperlink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:src="@mipmap/ic_emoji_weird_2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_hyperlink"
            android:layout_marginTop="14dp"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.65"
            android:textColor="@color/white"
            android:text="@string/comment_title"
            android:lines="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editText_comment_content"
        android:layout_marginTop="14dp"
        android:gravity="start|top"
        android:hint="@string/your_reply"
        android:padding="12dp"
        android:background="@drawable/shape_round_corner_all"
        android:textColorHint="@color/editTextHintColor"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

        <Button
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/editText_comment_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_comment_send"
            android:gravity="center"
            android:id="@+id/btn_comment_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/cancel"
            app:layout_constraintWidth_percent="0.33"
            android:textColor="@color/white"
            />
    <Button
        app:layout_constraintTop_toTopOf="@+id/btn_comment_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_comment_cancel"
        app:layout_constraintLeft_toRightOf="@+id/btn_comment_cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:id="@+id/btn_comment_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/send"
        app:layout_constraintWidth_percent="0.33"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>