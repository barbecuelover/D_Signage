<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="87dp"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">>

    <FrameLayout
        android:id="@+id/fl_edit_content"
        android:layout_width="49dp"
        android:layout_height="75dp"
        android:background="@drawable/shape_view_nocolor"
        android:padding="3dp">

        <ImageView
            android:id="@+id/img_slider_preview"
            android:src="@mipmap/grid"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_slider_selected_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/slider_checked"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="37dp"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv_page_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/trans_btn_active" />

    </RelativeLayout>

</LinearLayout>