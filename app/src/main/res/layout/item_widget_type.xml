<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="43dp"
    android:layout_height="52dp"
    android:layout_centerInParent="true"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardBackgroundColor="#242a31"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:id="@+id/widget_type_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/widget_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/slide_zoom_in_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/widget_type_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_radius_8"
            android:gravity="center"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="8sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>